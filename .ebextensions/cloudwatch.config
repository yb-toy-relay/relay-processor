files:
  "/opt/aws/amazon-cloudwatch-agent/bin/config.json":
    mode: "000600"
    owner: root
    group: root
    content: |
      {
        "agent": {
          "metrics_collection_interval": 60,
          "run_as_user": "root"
        },
        "metrics": {
          "append_dimensions": {
            "AutoScalingGroupName":"${aws:AutoScalingGroupName}",
            "InstanceId":"${aws:InstanceId}"
          },
          "metrics_collected": {
            "cpu": {
              "measurement": [
                "cpu_usage_active",
                "cpu_usage_system",
                "cpu_usage_user"
              ]
            },
            "mem": {
              "measurement": [
                "mem_total",
                "mem_free",
                "mem_used",
                "mem_used_percent"
              ]
            },
            "disk": {
              "measurement": [
                "disk_total",
                "disk_free",
                "disk_used",
                "disk_used_percent"
              ]
            }
          }
        },
        "logs": {
          "logs_collected": {
            "files": {
              "collect_list": [
                {
                  "file_path": "/var/log/nginx/access.log",
                  "log_group_name": "prod-relay-processor-logs-access",
                  "retention_in_days": 30,
                  "timezone": "Local"
                },
                {
                  "file_path": "/var/log/nginx/error.log",
                  "log_group_name": "prod-relay-processor-logs-error",
                  "retention_in_days": 30,
                  "timezone": "Local"
                },
                {
                  "file_path": "/var/log/web.stdout.log",
                  "log_group_name": "prod-relay-processor-logs-stdout",
                  "retention_in_days": 30,
                  "timezone": "Local"
                },
                {
                  "file_path": "/var/log/eb-engine.log",
                  "log_group_name": "prod-relay-processor-logs-eb-engine",
                  "retention_in_days": 30,
                  "timezone": "Local"
                },
                {
                  "file_path": "/var/log/eb-hooks.log",
                  "log_group_name": "prod-relay-processor-logs-eb-hooks",
                  "retention_in_days": 30,
                  "timezone": "Local"
                }
              ]
            }
          },
          "log_stream_name": "{instance_id}",
          "force_flush_interval": 10
        }
      }
container_commands:
  start_cloudwatch_agent:
    command: /opt/aws/amazon-cloudwatch-agent/bin/amazon-cloudwatch-agent-ctl -a fetch-config -m ec2 -s -c file:/opt/aws/amazon-cloudwatch-agent/bin/config.json